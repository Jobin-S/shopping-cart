<!--================ confirmation part start =================-->
<section class="confirmation_part padding_top">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="confirmation_tittle">
          <span>Thank you. Your order has been received.</span>
        </div>
      </div>
      <div class="col-lg-6 col-lx-4">
        <div class="single_confirmation_details">
          <h4>order info</h4>
          <ul>
            <li>
              <p>order number</p><span>: {{order._id}}</span>
            </li>
            <li>
              <p>date</p><span>: {{order.date}}</span>
            </li>
            <li>
              <p>total</p><span>: Rs {{order.totalAmount}} </span>
            </li>
            <li>
              <p>payment method</p><span>: {{order.paymentMethod}}</span>
            </li>
          </ul>
        </div>
      </div>
      <div class="col-lg-6 col-lx-4">
        <div class="single_confirmation_details">
          <h4>Shipping Address</h4>
          <ul>
            <li>
              <p>name</p><span>: {{order.deliveryDetails.name}}</span>
            </li>
            <li>
              <p>mobile</p><span>: {{order.deliveryDetails.mobile}}</span>
            </li>
            <li>
              <p>address</p><span>: {{order.deliveryDetails.addressLine1}}</span>
              <span>&nbsp;{{order.deliveryDetails.addressLine2}}</span>
            </li>
            <li>
              <p>pincode</p><span>: {{order.deliveryDetails.pincode}}</span>
            </li>
          </ul>
        </div>
      </div>

    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="order_details_iner">
          <h3>Order Details</h3>
          <table class="table table-borderless">
            <thead>
              <tr>
                <th scope="col" colspan="2">Product</th>
                <th scope="col">Quantity</th>
                <th scope="col">Total</th>
              </tr>
            </thead>
            <tbody>
              {{#each products}}
              <tr>
                <th colspan="2"><span>{{product.name}}</span></th>
                <th>{{quantity}}</th>
                <th> <span>Rs {{product.Price}}</span></th>
              </tr>
              {{/each}}

              <tr>
                <th colspan="3">Subtotal</th>
                <th> <span>Rs&nbsp; <span id="subTotal">{{order.totalAmount}}</span></th>
              </tr>
              <tr>
                <th colspan="3">shipping</th>
                <th><span>Rs&nbsp;</span><span id="shipping">80</span></th>
              </tr>
            </tbody>
            <tfoot>
              <tr>
                <th scope="col" colspan="3">Quantity</th>
                <th scope="col">Rs&nbsp; <span id="totalPrice"> </span></th>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
<!--================ confirmation part end =================-->

<script>
  let subTotal = parseInt(document.getElementById('subTotal').innerHTML)
  let shippingCharge = parseInt(document.getElementById('shipping').innerHTML)
  document.getElementById('totalPrice').innerHTML = subTotal + shippingCharge;
</script>
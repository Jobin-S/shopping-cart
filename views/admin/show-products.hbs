<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add products</a>
        </div>
        <table class="table mt-5 mt-5" id="product-table">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    
    {{#each products}}
    <tr>
      <th scope="row">{{@key}}</th>
      <td>{{name}}</td>
      <td>{{Category}}</td>
      <td>{{Discription}}</td>
      <td><img style="width: 70px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
      </td>
      <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Do you need to delete {{name}}?')">Delete</a></td>
    </tr>
    {{/each}}

  </tbody>
</table>
    </div>
</section>
<script>
  $(document).ready( function () {
    $('#product-table').DataTable();
} );
</script>